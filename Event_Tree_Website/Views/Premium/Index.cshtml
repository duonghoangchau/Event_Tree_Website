@model Event_Tree_Website.ViewModels.PremiumViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .btn {
        color: #fff;
        background-color: #17a2b8;
        border-color: #17a2b8;
    }
</style>


<div class="body" style="margin-top: 50px;">

    <div class="body__mainTitle d-flex justify-content-between align-items-center">
        <h2>Tất cả gói Premium</h2>
    </div>

    <div>
        <div class="row">
            @foreach (var item in Model.Pres)
            {
                <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="text-center">
                                <img src="~/content/images/vip_logo.png" height="300" />
                                <h5 class="card-title">@item.Name</h5>
                                <p class="card-text">@item.Description</p>
                                <p class="card-text">Price: @item.Price</p>
                                <button class="btn btn-buy">Buy</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>