@model Event_Tree_Website.ViewModels.CategoryViewModel

<div class="body" style="padding-top: 30px; margin-top: 50px;">
    <h4>Chỉnh Sửa Danh Mục</h4>
    <hr />
    <div class="row">
        <div class="col-md-10">
            <form asp-action="Edit" asp-controller="Category" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Category.IdCategory" />
                <div class="form-group">
                    <label asp-for="Category.Name" class="control-label">TÊN DANH MỤC</label>
                    <input asp-for="Category.Name" class="form-control" required />
                    <span asp-validation-for="Category.Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Category.Order" class="control-label">ORDER</label>
                    <input asp-for="Category.Order" class="form-control" required min="0" />
                    <span asp-validation-for="Category.Order" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Category.Link" class="control-label">LINK</label>
                    <input asp-for="Category.Link" class="form-control" required />
                    <span asp-validation-for="Category.Link" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Category.Hide" class="control-label">TRẠNG THÁI</label>
                    <select asp-for="Category.Hide" class="form-control" asp-items="@Model.HideOptions">
                        <option>Please select one</option>
                    </select>
                    <span asp-validation-for="Category.Hide" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Category.IdParent" class="control-label">IDPARENT</label>
                    <input asp-for="Category.IdParent" class="form-control" required />
                    <span asp-validation-for="Category.IdParent" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
                </div>
            </form>
        </div>
    </div>

</div>