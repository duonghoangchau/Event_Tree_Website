@model Event_Tree_Website.ViewModels.EventViewModel


<div class="bodyyy" style="margin-top: 50px; padding: 0.5cm;">
	<div class="body__mainTitle d-flex justify-content-center align-items-center" style="text-align: center;">
		<h2>TẤT CẢ SỰ KIỆN</h2>
	</div>

    <div>
        <div class="row">
            @foreach (var item in Model.Eves)
            {
                <div class="col-lg-2_5 col-md-4 col-6 post2">
                    <a asp-controller="Event" asp-action="EventDetail" asp-route-slug="@item.Link" asp-route-id="@item.Id">
                        <div class="product">
                            <div class="product__img">
                                <img src="@item.ImageCode" alt="@item.Name" width="90" height="90">
                            </div>
                            <div class="product__content">
                                <div class="product__title">
                                    @item.Name
                                </div>
                            </div>
                            <p style="text-align: center;margin-top:20px">
                                <a href="su-kien/@item.Link-@item.Id" class="btn btn-info" role="button"><i class="fa fa-rocket"></i> Chi tiết</a>
                            </p>
                        </div>
                    </a>
                </div>
            }
        </div>

        <ul class="pagination justify-content-center" style="margin: 10px auto;">

            @if (Model.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" href="su-kien?page=@(Model.CurrentPage - 1)" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
            }

            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" href="su-kien?page=@i">@i</a>
                </li>
            }

            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" href="su-kien?page=@(Model.CurrentPage + 1)" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
            }

        </ul>


    </div>
</div>