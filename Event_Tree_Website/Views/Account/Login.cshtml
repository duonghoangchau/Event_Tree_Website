@model Event_Tree_Website.ViewModels.UserViewModel
<div asp-validation-summary="All" class="text-danger"></div>

<div class="login-form">
    <div class="height360">
        <div class="main">
            <form class="form form-horizontal" asp-action="Login" asp-controller="Account"
                  method="POST" class="form" id="form-2">
                @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                {
                    <div class="alert alert-danger" role="alert">
                        @ViewBag.ErrorMessage
                    </div>
                }
                <h3 class="heading"> Đăng nhập hệ thống</h3>

                <div class="form-group">
                    <label asp-for="Register.Username" class="col-md-3 control-label"></label>
                    <input class="form-control" asp-for="Register.Username" placeholder="Nhập tên đăng nhập" autofocus required />
                    <span asp-validation-for="Register.Username" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Register.Password" class="col-md-3 control-label"></label>
                    <input type="password" class="form-control" asp-for="Register.Password" id="password" placeholder="Nhập mật khẩu" required />
                    <span asp-validation-for="Register.Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-3">
                        <button type="submit" class="btn btn-danger">Đăng nhập</button>
                    </div>
                </div>

                <div class="dont-have-account">
                    Bạn chưa có tài khoản? <a class="account-register" asp-controller="Account" asp-action="Register">Đăng ký ngay</a>
                </div>

                <div class="social-login">
                    <p>hoặc đăng nhập với</p>
                    <a class="btn btn-primary" asp-controller="Account" asp-action="GoogleLogin">Đăng nhập với Google</a>
                    <a class="btn btn-primary" asp-controller="Account" asp-action="FacebookLogin">Đăng nhập với Facebook</a>
                </div>
            </form>
        </div>
    </div>
</div>
